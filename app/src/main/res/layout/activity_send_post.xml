<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_margin="2dp"
    tools:context=".SendPostActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@color/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textSize="12dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:hint="Please Post Your Image "
            android:layout_height="wrap_content" />

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        app:contentPadding="5dp"
        app:cardMaxElevation="8dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/img_post"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="300dp" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:layout_width="200dp"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/edt_caption"
            android:hint="Please Enter Your Caption"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/b"
            android:text="Send"
            android:id="@+id/btn_send"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textStyle="bold" />


    <Button
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/b"
            android:text="Seen Posts"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
            android:id="@+id/btn_show_Posts"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:text="هر کاربر فقط 1 عکس میتواند به اشتراک بگذارد ."
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:background="@android:color/holo_red_light"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>